# Makefile for pxcp
#
# @configure_input@

.c.o:
	$(CC) $(CPPFLAGS) $(CFLAGS) -c -o $@ $<

PACKAGE =		@PACKAGE_TARNAME@
VERSION =		@PACKAGE_VERSION@

srcdir =		@srcdir@
VPATH =			@srcdir@

prefix =		@prefix@
exec_prefix =		@exec_prefix@
datarootdir =           @datarootdir@

BINDIR =		@bindir@
MANDIR =		@mandir@
MAN1DIR =		${MANDIR}/man1

CPPFLAGS =		@CPPFLAGS@ -I. -I$(srcdir)
CFLAGS =		@CFLAGS@ -Wall
LDFLAGS =		@LDFLAGS@
LIBS =			@LIBS@

CC = 			@CC@
INSTALL =		@INSTALL@
TAR =			tar
@SET_MAKE@

VALGRIND =		valgrind
VALGRINDFLAGS =		--leak-check=full --track-origins=yes --error-exitcode=1 # --show-leak-kinds=all

PROGRAMS =	        pxcp

PXCP_OBJS =             pxcp.o fsobj.o acls.o

all: $(PROGRAMS)

acls.o:  acls.c acls.h config.h
fsobj.o: fsobj.c fsobj.h config.h
pxcp.o:  pxcp.c acls.h config.h

pxcp: $(PXCP_OBJS)
	$(CC) $(LDFLAGS) -o pxcp $(PXCP_OBJS) $(LIBS)

configure: configure.ac
	autoconf

config.h.in: configure.ac
	autoheader


clean:
	-rm -f core *.o pxcp; find . \( -name '*~' -o -name '#*' \) -print0 | xargs -0 rm -f

distclean: clean
	rm -fr config.status config.log autom4te.cache Makefile config.h t

# Check targets
setup-check:
	@rm -fr t && mkdir -p t/s t/s/d t/e t/d && touch t/s/f.txt && ln -s nowhere t/s/symlink && touch t/d/d && setfacl -m root:r t/s/f.txt && echo "Hello" >t/s/d/f2.txt

check:	pxcp setup-check
	@echo ""; echo "--- Check 1: Cloning t/s -> t/d"
	@./pxcp -vrA  t/s t/d
	@echo ""; echo "--- Check 2: ls -lR"
	@(cd t/s ; ls -lR .) >/tmp/pxcp-s.out ; (cd t/d ; ls -lR .) >/tmp/pxcp-d.out ; cmp /tmp/pxcp-s.out /tmp/pxcp-d.out && echo "OK"
	@echo ""; echo "--- Check 3: File Content"
	@cmp t/s/d/f2.txt t/d/d/f2.txt && echo "OK"
	@echo ""; echo "--- Check 3: ACL ACE entry copied"
	@getfacl t/s/f.txt | fgrep 'user:root:r--' >/dev/null && echo "OK"
	@echo ""; echo "--- Check 4: Cloning t/e -> t/d"
	@./pxcp -vrAp t/e t/d
	@echo ""; echo "--- Check 5: t/d should be empty"
	@rmdir t/d && echo "OK"
	@echo ""; echo "All tests passed."


# Git targets
push: 	distclean
	git add -A && git commit -a && git push

pull:
	git pull
